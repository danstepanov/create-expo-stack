{
  "compilerOptions": {
    "types": ["bun-types"],

    "lib": ["ESNext"],
    "module": "esnext",
    "target": "esnext",

    "rootDir": ".",
    "moduleResolution": "Bundler",
    "noEmit": false,
    "moduleDetection": "force",

    "allowJs": true,
    "jsx": "react-jsx",

    // Best practices
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "composite": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,

    // Misc
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "sourceMap": false,
    "inlineSourceMap": true,
    "outDir": "build",
    "declaration": true,
    "declarationDir": "build/types",
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["src", "__tests__", "package.json"],
  "exclude": ["node_modules"]
}
